#!groovy
// Check node properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh '\'hostname\''
            }
        }
        stage("Second step") {
            steps {
                sh '\'ip addr\''
            }
        }
        stage("Third step") {
            steps {
                sh '\'uname -a\''
            }
        }
    }
}
